{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"], // Deshabilitar el uso de punto y coma al final de cada sentencia
    "indent": ["error", 2]
  }
}
